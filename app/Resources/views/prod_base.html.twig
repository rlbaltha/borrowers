<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Borrowers and Lenders:  The Journal of Shakespeare and Appropriation{% endblock %}</title>
    {% block stylesheets %}
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/app/css/bandl5.css') }}">
    {% endblock %}

    {% block javascripts %}
        <!-- jQuery first, then Bootstrap JS. -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js"
                integrity="sha384-vZ2WRJMwsjRMW/8U7i6PWi6AlO1L79snBrmgiDpgIWJ82z8eA5lenwvxbMV1PAh7"
                crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    {% endblock %}
</head>

<body>
<script language="javascript">
$( document ).ready(function() {
    $('.wc').popover()
});

</script>
<table cellpadding="0">
    <tr>
        <td class='header' style="padding:0;border:0;margin: 0; border-spacing: 0;height:145px; width:800px;  background: url({{ asset
        ('bundles/app/img/01-header-book-d2.jpg') }});background-repeat: no-repeat">
            <div style="position:absolute; width: 20%; top: 0px; right:15%;">
                {# <gcse:search></gcse:search> #}
            </div>

        </td>
    </tr>

    <tr >
        <td>
            <!-- body table -->
            <table cellpadding="0">
                <tr>
                    <td class='leftside' style="vertical-align:top;background-image:url({{ asset('bundles/app/img/02-side-book-d2.jpg') }});background-repeat:repeat-y;">

                        <!-- nav bar table-->
                        <table cellpadding="0">
                            <tr>
                                <td class='nav01' style="width:150px;height:58px" >
                                    <a href="{{ path('issue_current') }}" ><img src="{{ asset('bundles/app/img/current_issue_off.jpg') }}" style="border:0;width:150px;height:58px;"/></a>
                                </td>
                            </tr>
                            <tr>
                                <td class='nav02'  style="width:150px;height:54px">

                                    <a href="{{ path('issue_previous') }}" ><img src="{{ asset('bundles/app/img/previous_issue_off.jpg') }}" border="0" width='150px' height="54px"/></a>

                                    <a href="{{ path('issue_about') }}" ><img src="{{ asset('bundles/app/img/b5-off-book-d2.jpg') }}" border="0" width='150px' height="36px"/></a>
                                </td>
                            </tr>
                            <tr>
                                <td class='nav03'  style="width:150px;height:36px">

                                    <a href="{{ path('issue_archive') }}" ><img src="{{ asset('bundles/app/img/archive-off.jpg') }}" border="0" width='150px' height="36px"/></a>

                                </td>
                            </tr>

                        </table>

                    </td>

                    <!-- body cell -->
                    <td class='textarea' style="width: 800px;">

                                    {% block body %}{% endblock %}

                    </td>

                    <td class='rightside' style="width:330px;background-image:url({{ asset('bundles/app/img/03-rside-book-d2.jpg') }});background-repeat:repeat-y;"></td>
                </tr>
                <tr><td class='leftside' style="vertical-align:top;background-image:url({{ asset('bundles/app/img/02-side-book-d2.jpg') }});background-repeat:repeat-y;">
                    <td class='textarea' style="width: 800px;text-align: center">&#169; Borrowers and Lenders 2005-{{ "now"|date("Y") }}</td>
                    <td class='rightside' style="width:330px;background-image:url({{ asset('bundles/app/img/03-rside-book-d2.jpg') }});background-repeat:repeat-y;"></td>

                </tr>
            </table>
            <!--close body row-->

        </td>
    </tr>

    <!--footer row-->
    <tr>
        <td class='footer' style="height:180px;background-image:url({{ asset('bundles/app/img/06-footer-book-d2.jpg') }});background-repeat:no-repeat;"></td>
    </tr>
</table>


</body>
</html>
