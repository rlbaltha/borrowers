<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Borrowers & Lenders{% endblock %}</title>
        {% block stylesheets %}
            <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
            <link type="text/css" rel="stylesheet" href="{{ asset('bundles/borrowershome/css/local.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% javascripts '@jquery_js' '@jqueryui_js' '@bootstrap_js' combine=true output='js/compiled/main.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
     <div class="navbar navbar-inverse navbar-fixed-top">
         <div class="navbar-header col-sm-2">
             <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                 <span class="icon-bar"></span>
                 <span class="icon-bar"></span>
                 <span class="icon-bar"></span>
             </button>
             <a name="top"></a>
             <a class="navbar-brand" href="#">Borrowers & Lenders</a>
         </div>

         <div class="navbar-collapse collapse">
             <ul class="nav navbar-nav">
              <li class="active"><a title="Issues" href="{{ path('issue') }}" >Issues</a></li>
              <li class="active"><a title="Authors" href="{{ path('author') }}" >Authors</a></li>
              {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
              <li class=""><a class='last' title="Change Password" href="{{ path('fos_user_change_password') }}">Change PW</a></li>
              <li class=""><a class='last' title="Logout" href="{{ path('fos_user_security_logout') }}">Logout</a></li>
              {% else %}
              <li class=""><a class='last' title="Login" href="{{ path('fos_user_security_login') }}">Login</a></li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
    </div>
            
        <div class="container">
            <div class="col-lg-12">
            {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
