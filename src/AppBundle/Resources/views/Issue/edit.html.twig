
{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

<div class="row">   
    <div class="col-sm-10">
        <form action="{{ path('issue_update', { 'id': issue.id }) }}" method="post" novalidate="novalidate">
            {{ form_widget(edit_form) }}
        <div>
            <button class="btn btn-primary margintop" type="submit">Update</button>
        </div>
        </form>
        <hr/>
        <form action="{{ path('issue_delete', { 'id': issue.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>    
    </div>
</div>
{% endblock %}
