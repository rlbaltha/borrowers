{% extends 'BorrowersIssueBundle::layout.html.twig' %}

{% block content %}

    <div class="col-sm-12 well">

        <form action="{{ path('author_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">
            {{ form_widget(edit_form) }}
            <div>
                <button class="btn btn-default" type="submit">Update</button>
            </div>
        </form>

        <hr/>
        <form action="{{ path('author_delete', { 'id': entity.id }) }}" method="post" novalidate="novalidate">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>


    </div>

{% endblock %}
