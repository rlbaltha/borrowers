{% extends 'BorrowersIssueBundle::layout.html.twig' %}

{% block content %}
    <div class="col-sm-12 well">
        <form action="{{ path('section_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">
            {{ form_widget(edit_form) }}
            <div>
                <button class="btn btn-default margintop" type="submit">Edit</button>
            </div>
        </form>

        <form action="{{ path('section_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </div>
{% endblock %}
