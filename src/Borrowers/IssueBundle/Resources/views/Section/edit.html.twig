
{% extends 'BorrowersHomeBundle::layout.html.twig' %}

{% block content %}
<div class="row"> 
<div class="span2">
<a class="btn btn-info" href="{{ path('issue') }}">List</a>
 
</div>       
  
<div class="span1">        
<form action="{{ path('section_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
</div>  


<div class="row">   
    <div class="span6 well">  
        <form action="{{ path('section_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
        <div>
            <button class="btn" type="submit">Edit</button>
        </div>
        </form>
    </div>
</div>
{% endblock %}
