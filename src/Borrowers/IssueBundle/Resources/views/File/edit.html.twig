
{% extends 'BorrowersHomeBundle::layout.html.twig' %}

{% block content %}
    <script language="javascript">
        $(document).ready(function() {
            $('#borrowers_issuebundle_filetype_authors').addClass('form-control');
        });
    </script>
    <div class="col-sm-12 well">
        <form action="{{ path('file_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
        <div>
            <button class="btn btn-primary margintop" type="submit">Update</button>
        </div>
        </form>
        <hr/>
        <form action="{{ path('file_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>    
    </div>
{% endblock %}
