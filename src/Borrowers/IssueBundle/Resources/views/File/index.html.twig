
{% extends 'BorrowersHomeBundle::layout.html.twig' %}

{% block content %}
   <div class="col-sm-10">
      <a class="btn btn-primary" href="{{ path('file_new') }}">New</a>
   </div>


<div class="col-sm-10">
<table class="table table-bordered table-condensed table-striped">   
<tbody>
    {% for entity in entities %}
    <tr>            
               
        <td><a class="" href="{{ path('file_display', { 'id': entity.id }) }}">{{ entity.title |raw }}</a></td> 
        <td>{{ entity.path }}</td> 
        <td><a class="btn" href="{{ path('file_show', { 'id': entity.id }) }}">show</a><a class="btn" href="{{ path('file_edit', { 'id': entity.id }) }}">edit</a>
</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
